<style lang="text/scss">
	#projects{
		display: flex;
		justify-content: center;
		align-items: start;

		ul{
			display: flex;
			flex-direction: column;
			
			*{
				margin-bottom: 2vh;
			}
		}
	}

	#home{
		display: flex;
		flex-direction: column;
		align-items: center;
		
		#intro{
			width: 50%;
			font-size: 2.5em;
			display: flex;
			justify-content: space-around;
			align-items: center;

			img{
				height: 8em;
				border-radius: .2em;
			}

			p{
				width: 50%;
			}
		}
	}
</style>
