---
import "../style/scss/global.scss";
import TopBar from "../components/TopBar.astro";
const {Page="Page"} = Astro.props;

---

<html lang="en">
	<script src="https://kit.fontawesome.com/e4b9b41e06.js" crossorigin="anonymous"></script>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://AmyCur.github.io/favicon.svg" />
		<title>{Page}</title>
	</head>
	<body style="display: flex; flex-direction: column;">
		<TopBar Page={Page}/>
		<span style="margin-top: 14vh;">
		<slot />
	</body>
</html>
