---
import TopBar from "../components/TopBar.astro";
const {Page="Page"} = Astro.props;

---

<html lang="en">
	<script src="https://kit.fontawesome.com/e4b9b41e06.js" crossorigin="anonymous"></script>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="https://AmyCur.github.io/favicon.svg" />
		<title>{Page}</title>
	</head>
	<body style="display: flex; flex-direction: column;">
		<TopBar Page={Page}/>
		<span style="margin-top: 14vh;">
		<slot />
	</body>
</html>

<style is:global>
	@import url('https://fonts.googleapis.com/css2?family=TikTok+Sans:opsz,wght@12..36,300..900&display=swap');

	*{
		color: white;
		font-family: "TikTok Sans", sans-serif;
		text-decoration: none;
	}

	html{
		background-color: #1F1F1F;
	}

	li{
		display: flex;
	}

	a{
		text-decoration: none;
	}

	iframe{
		border: none;
		border-radius: .7vw;
	}
</style>
